<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin_translatable.locale_listener.class">FSi\Bundle\AdminTranslatableBundle\EventListener\LocaleListener</parameter>
        <parameter key="admin_translatable.translatable_crud_listener.class">FSi\Bundle\AdminTranslatableBundle\Doctrine\Admin\EventListener\TranslatableCRUDListener</parameter>
    </parameters>

    <services>
        <service id="admin_translatable.locale_listener" class="%admin_translatable.locale_listener.class%">
            <argument type="service" id="admin_translatable.manager.locale" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_translatable.translatable_crud_listener" class="%admin_translatable.translatable_crud_listener.class%">
            <argument type="service" id="admin_translatable.manager.locale" />
            <argument type="service" id="doctrine" />
            <argument type="service" id="property_accessor" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
