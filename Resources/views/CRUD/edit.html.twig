{% extends '@FSiAdmin/CRUD/edit.html.twig' %}

{% block content %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                {% if form.vars.data.__toString() is defined %}
                    <h3 id="page-header">{{ title|trans({'%element%': form.vars.data}, 'FSiAdminBundle') }}</h3>
                {% else %}
                    <h3 id="page-header">{{ title|trans({}, 'FSiAdminBundle') }}</h3>
                {% endif %}
                {{ form_start(form, { action: path('fsi_admin_translatable_crud_edit', { element: element.id, id: id, locale: translatable_locale }), 'attr': { class: 'form-horizontal' }|merge(form.vars.attr) }) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-default">{{ 'crud.edit.button.save'|trans({}, 'FSiAdminBundle')  }}</button>
                        <button type="reset" class="btn btn-primary">{{ 'crud.edit.button.reset'|trans({}, 'FSiAdminBundle')  }}</button>
                        {% if app.request.query.has('redirect_uri') %}
                            <a class="btn btn-info pull-right" href="{{ app.request.query.get('redirect_uri') }}">{{ 'crud.edit.button.back_to_list'|trans({}, 'FSiAdminBundle')  }}</a>
                        {% endif %}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
