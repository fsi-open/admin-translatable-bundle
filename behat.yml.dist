default: &default
    filters:
        tags: ~@wip
    paths:
        features: features
    context:
        class: FSi\Bundle\AdminTranslatableBundle\Behat\Context\FeatureContext
    extensions:
        Behat\MinkExtension\Extension:
            base_url: 'http://fsi-admin-translatable-bundle.dev/app_test.php/'
            default_session: symfony2
            selenium2:
                browser: "firefox"
                wd_host: http://127.0.0.1:4444/wd/hub
        Behat\Symfony2Extension\Extension:
            mink_driver: true
            kernel:
                env: test
                debug: true
                path: features/fixtures/project/app/AppKernel.php
                bootstrap: features/fixtures/project/app/bootstrap.php
        SensioLabs\Behat\PageObjectExtension\Extension: ~
travis:
    <<: *default
    extensions:
        Behat\MinkExtension\Extension:
            base_url: "http://localhost:8080/app_test.php"
